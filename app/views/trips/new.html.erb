<h1>Trips#new</h1>
<p>Find me in app/views/trips/new.html.erb</p>


<%= form_for @trip, url: {action: "create"} do |f| %>

  <h4>What mountain are you going to?</h4>
  <%= f.select(:mountain_id, Mountain.all.collect {|m| [m.name, m.id]}, {prompt: 'select mountain'}) %>

  <h4>Who are you going with?</h4>

  <h4>What's your trip hashtag?</h4>
  <%= f.text_field :hashtag %>
  <%= f.submit %>

<% end %>

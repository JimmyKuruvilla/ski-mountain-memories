<body onload="initialize()" onunload="GUnload()">
  <div><h1>Mountain Map</h1></div>
  <%= content_tag "div", id: "map-canvas", data: {lat: @lat, lng: @lng, zoom: @zoom_level, visuals: @visuals,  trip_id: @trip.id} do %>

  <% end %>

  <a class="fancybox-thumb" rel="fancybox-thumb" href="http://farm9.staticflickr.com/8507/8454547519_f8116520e1_b.jpg" title="Ayvalık, Turkey (Nejdet Düzen)">
    <img src="http://farm9.staticflickr.com/8507/8454547519_f8116520e1_m.jpg" alt="" />
  </a>

  <%= link_to "Log Out", sessions_destroy_path %>



  <input type="text" id="numMarkers" value="500"/>
  <select id="markerType">
    <option value="gmarker" selected>GMarker</option>
    <option value="markerlight">MarkerLight</option>
  </select>
  <input type="button" onclick="addRandomMarkers()" value="Add Markers"/>
  <input type="button" onclick="map.clearOverlays()" value="Clear Markers"/>
  <div id="map_canvas" style="width: 800px; height: 600px"></div>
</body>





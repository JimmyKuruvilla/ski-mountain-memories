<!DOCTYPE html>
<html>

<head>
  <title>SkiMountainMemories</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <script src="https://maps.googleapis.com/maps/api/js"></script>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= analytics_init if Rails.env.production? %>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
</head>

<body>

    <div class="container">
      <div class="main-navbar">
        <button class="navbar-button" type="button" >
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        </a>
      </div>
    </div>

    <!-- Links on page -->
    <div class="container">
      <div class="navbar-links">
        <ul class="main-links">
        
        <% if session[:user_id] %>
          <% user = User.find(session[:user_id]) %>
          <li>
            <p class="hidden-xs"><%= user.user_name %></p>
            <a href="http://instagram.com/<%= user.user_name %>"><img src="<%= user.ig_profile_url %>"></a>
          </li>
          <hr>
          <li><a href="<%= new_trip_path %>">Create a trip</a></li>

          <% if @trip && !@trip.hashtag.nil? %>
            <hr>
            <li>Current trip</li>
            #<%= @trip.hashtag %>
            <hr>
             <li class="trip-buddies">Trip buddies</li>
            <% end %>
          <hr>
          <li class="logout-link"><a href="<%= sessions_destroy_path %>">Log Out</a></li>
        <% else %>
          <li><a href="<%= instagram_oauth_connect_path %>">Sign in with Instagram</a></li>
          <hr>
          <li><%= link_to "About", about_path, remote: true %></li>
          <hr>
          <li><%= link_to "Team", team_path, remote: true %></li>
          <% end %>
        </ul>
      </div>
    </div>
